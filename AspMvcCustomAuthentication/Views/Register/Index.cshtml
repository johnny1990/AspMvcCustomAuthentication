@model AspMvcCustomAuthentication.Models.RegisterModel

@{
    ViewBag.Title = "Index";
}

<h2>Welcome</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="register-heading">Register as a new user in system!</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control", placeholder = "First Name *" })
                @Html.ValidationMessageFor(e => e.FirstName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(e => e.LastName, new { @class = "form-control", placeholder = "Last Name *" })
                @Html.ValidationMessageFor(e => e.LastName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                <span id="result"></span>
                @Html.ValidationMessageFor(e => e.Password)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.PasswordFor(e => e.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password *" })
                @Html.ValidationMessageFor(e => e.ConfirmPassword)
            </div>
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.RadioButtonFor(e => e.Gender, "Male", new { @class = "radio inline" }) @Html.Label("Male")
                    @Html.RadioButtonFor(e => e.Gender, "Female", new { @class = "radio inline" }) @Html.Label("Female")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Your Email *" })
                @Html.ValidationMessageFor(e => e.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(e => e.PhoneNumber, new { @class = "form-control", placeholder = "Your Phone *" })
                @Html.ValidationMessageFor(e => e.PhoneNumber)
            </div>

            <div class="form-group">
                @Html.Label("Security question", htmlAttributes: new { @class = "control-label col-md-2" })
                <select class="form-control">
                    <option class="hidden" selected disabled>Please chose one Sequrity Question</option>
                    <option>What is your prefered vacation location?</option>
                    <option>What is your pet name?</option>
                    <option>What is your prefered food?</option>
                </select>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SecurityAnwser, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(e => e.SecurityAnwser, new { @class = "form-control", placeholder = "`Answer *" })
                @Html.ValidationMessageFor(e => e.SecurityAnwser)
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" id="btnSave"/>
            </div>
        </div>
    </div>
}

@section scripts{

<script type="text/javascript">
$(document).ready(function () {
    $("#btnSave").click(function () {
        var txtName = $("#txtName");
        alert("User details inserted succesfully!");
       
    });
})
    </script>
}
